@model List<Message>
@{
}

<h1>Сообщения</h1>
<p>Список сообщений</p>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Дата</th>
            <th>Текст</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var message in Model)
        {
            <tr>
                <td>@message.UserId</td>
                <td>@message.CreatedAt</td>
                <td>@message.Text</td>
            </tr>
        }
    </tbody>
</table>
<div>
        <a class="btn btn-primary" asp-area="" asp-controller="Messages" asp-action="Create">Создать сообщение</a>
</div>