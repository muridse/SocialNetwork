@model List<User>
@{
}
<h1>Пользователи</h1>
<p>Список пользователей</p>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Пользователь</th>
            <th>Почта</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td>@user.Email</td>
            </tr>
        }
    </tbody>    
</table>
<div>
        <a class="btn btn-primary" asp-area="" asp-controller="Users" asp-action="Create">Создать пользователя</a>
</div>