<h1>Create User</h1>

<form method="post" asp-action="Create">
    <div class="form-group">
    <label as-for="Name">Name</label>
    <input as-for="Name" class="form-control" name="Name" />
    </div>
    <div class="form-group">
    <label as-for="Email">Email</label>
    <input type="email" as-for="Email" class="form-control" name="Email"/>
    </div>
    <div class="form-group">
    <label as-for="Password">Password</label>
    <input as-for="Password" type="password" class="form-control" name="Password"/>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
